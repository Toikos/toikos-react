{
    "compilerOptions": {
        "outDir": "./lib",
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "declaration": false,
        "sourceMap": true,
        "skipLibCheck": true,
        "jsx": "react",
        "typeRoots": [
            "index.d.ts",
            "node_modules/@types"
        ],
        "types": ["react", "react-native"]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}